<UserControl x:Class="HubSpotr.WindowsPhone.Controls.PostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    xmlns:converter="clr-namespace:HubSpotr.WindowsPhone.Converters"
    d:DesignHeight="120" d:DesignWidth="480">
    <UserControl.Resources>
        <converter:DateConverter x:Key="DateConverter"></converter:DateConverter>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Margin="12" Background="{StaticResource HubSpotr_Pink}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{Binding Picture}" Width="73" Height="73"></Image>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height=".3*"></RowDefinition>
                <RowDefinition Height=".7*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".65*"></ColumnDefinition>
                    <ColumnDefinition Width=".35*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Name}" TextTrimming="WordEllipsis" Style="{StaticResource PhoneTextTitle3Style}"></TextBlock>
                <TextBlock Grid.Column="1" TextAlignment="Right" Text="{Binding At, Converter={StaticResource DateConverter}}" Style="{StaticResource PhoneTextSubtleStyle}"></TextBlock>
            </Grid>
            <TextBlock Grid.Row="1" Text="{Binding Message}" Style="{StaticResource PhoneTextSubtleStyle}"></TextBlock>
        </Grid>
    </Grid>
</UserControl>